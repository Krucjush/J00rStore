@model IEnumerable<Order>

<table class="table table-hover">
	<thead>
	<tr>
		<th scope="col">Id</th>
		<th scope="col">Name</th>
		<th scope="col">Phone Number</th>
		<th scope="col">Price</th>
		<th scope="col">#</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.PhoneNumber</td>
			<td>@item.TotalPrice</td>
			<td><a class="btn btn-dark" asp-controller="Order" asp-action="Details" asp-route-orderId="@item.Id">Show details</a></td>
		</tr>
	}
	</tbody>
</table>